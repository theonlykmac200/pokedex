    <body>
        <h1>Pokemon collect them ALL!</h1>
        
        <% for(let i = 0; i < pokemon.length; i++) {%>
            
            
            <h3><%= pokemon[i].name%></h3>
            <li><a href ="/pokemon/<%=i%>"><img src="<%= pokemon[i].img%>"></a></li>
        <%}%>

        <button><a href ="/pokemon/new">Add a New Pokemon</a> </button> 
    </body>
